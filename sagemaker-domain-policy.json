{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "SageMakerDomainManagement",
            "Effect": "Allow",
            "Action": [
                "sagemaker:CreateDomain",
                "sagemaker:DescribeDomain",
                "sagemaker:ListDomains",
                "sagemaker:UpdateDomain",
                "sagemaker:DeleteDomain",
                "sagemaker:CreateUserProfile",
                "sagemaker:DescribeUserProfile",
                "sagemaker:ListUserProfiles",
                "sagemaker:UpdateUserProfile",
                "sagemaker:DeleteUserProfile",
                "sagemaker:CreateApp",
                "sagemaker:DescribeApp",
                "sagemaker:ListApps",
                "sagemaker:DeleteApp",
                "sagemaker:CreatePresignedDomainUrl",
                "sagemaker:CreatePresignedNotebookInstanceUrl",
                "sagemaker:ListTags",
                "sagemaker:AddTags",
                "sagemaker:DeleteTags",
                "sagemaker:RenderUiTemplate",
                "sagemaker:Search",
                "sagemaker:GetSagemakerServicecatalogPortfolioStatus",
                "sagemaker:GetLineageGroupPolicy",
                "sagemaker:PutLineageGroupPolicy"
            ],
            "Resource": "*"
        },
        {
            "Sid": "IAMRolePolicyManagement",
            "Effect": "Allow",
            "Action": [
                "iam:AttachRolePolicy",
                "iam:DetachRolePolicy",
                "iam:ListAttachedRolePolicies",
                "iam:GetRole",
                "iam:GetRolePolicy",
                "iam:ListRolePolicies",
                "iam:PassRole",
                "iam:ListRoles"
            ],
            "Resource": [
                "arn:aws:iam::167819473688:role/service-role/*",
                "arn:aws:iam::167819473688:role/AmazonSageMaker-*",
                "arn:aws:iam::167819473688:role/*SageMaker*"
            ],
            "Condition": {
                "StringEquals": {
                    "iam:PassedToService": "sagemaker.amazonaws.com"
                }
            }
        },
        {
            "Sid": "ServiceCatalogPortfolioAccess",
            "Effect": "Allow",
            "Action": [
                "servicecatalog:AssociatePrincipalWithPortfolio",
                "servicecatalog:DisassociatePrincipalFromPortfolio",
                "servicecatalog:ListPrincipalsForPortfolio",
                "servicecatalog:ListPortfolios",
                "servicecatalog:DescribePortfolio",
                "servicecatalog:SearchProductsAsAdmin",
                "servicecatalog:ListProvisioningArtifacts"
            ],
            "Resource": "*"
        },
        {
            "Sid": "KMSEncryptionDecryption",
            "Effect": "Allow",
            "Action": [
                "kms:Decrypt",
                "kms:Encrypt",
                "kms:ReEncrypt*",
                "kms:GenerateDataKey",
                "kms:GenerateDataKeyWithoutPlaintext",
                "kms:DescribeKey",
                "kms:CreateGrant",
                "kms:ListGrants",
                "kms:RevokeGrant"
            ],
            "Resource": [
                "arn:aws:kms:*:167819473688:key/*"
            ],
            "Condition": {
                "StringLike": {
                    "kms:ViaService": [
                        "sagemaker.*.amazonaws.com",
                        "s3.*.amazonaws.com"
                    ]
                }
            }
        },
        {
            "Sid": "S3AccessForSageMaker",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:PutObject",
                "s3:DeleteObject",
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::sagemaker-*",
                "arn:aws:s3:::sagemaker-*/*"
            ]
        },
        {
            "Sid": "EC2VPCNetworkAccess",
            "Effect": "Allow",
            "Action": [
                "ec2:CreateVpcEndpoint",
                "ec2:DescribeVpcEndpoints",
                "ec2:DescribeVpcs",
                "ec2:DescribeSubnets",
                "ec2:DescribeSecurityGroups",
                "ec2:DescribeRouteTables",
                "ec2:DescribeNetworkInterfaces",
                "ec2:CreateNetworkInterface",
                "ec2:DeleteNetworkInterface",
                "ec2:ModifyNetworkInterfaceAttribute",
                "ec2:AssignPrivateIpAddresses",
                "ec2:UnassignPrivateIpAddresses",
                "ec2:DescribeNetworkInterfaceAttribute",
                "ec2:DescribeAvailabilityZones",
                "ec2:DescribeAccountAttributes"
            ],
            "Resource": "*"
        },
        {
            "Sid": "CloudWatchLogs",
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents",
                "logs:DescribeLogGroups",
                "logs:DescribeLogStreams",
                "logs:GetLogEvents",
                "logs:FilterLogEvents"
            ],
            "Resource": "arn:aws:logs:*:167819473688:log-group:/aws/sagemaker/*"
        },
        {
            "Sid": "EventBridgePermissions",
            "Effect": "Allow",
            "Action": [
                "events:PutRule",
                "events:PutTargets",
                "events:DescribeRule",
                "events:RemoveTargets",
                "events:DeleteRule"
            ],
            "Resource": "arn:aws:events:*:167819473688:rule/sagemaker-*"
        },
        {
            "Sid": "EFSAccessForStudio",
            "Effect": "Allow",
            "Action": [
                "elasticfilesystem:DescribeFileSystems",
                "elasticfilesystem:DescribeMountTargets",
                "elasticfilesystem:DescribeAccessPoints",
                "elasticfilesystem:CreateAccessPoint",
                "elasticfilesystem:DeleteAccessPoint",
                "elasticfilesystem:DescribeMountTargetSecurityGroups",
                "elasticfilesystem:ModifyMountTargetSecurityGroups",
                "elasticfilesystem:ClientMount",
                "elasticfilesystem:ClientWrite",
                "elasticfilesystem:ClientRootAccess"
            ],
            "Resource": "*"
        },
        {
            "Sid": "ECRAccessForStudio",
            "Effect": "Allow",
            "Action": [
                "ecr:GetAuthorizationToken",
                "ecr:BatchCheckLayerAvailability",
                "ecr:GetDownloadUrlForLayer",
                "ecr:BatchGetImage",
                "ecr:DescribeRepositories",
                "ecr:ListImages"
            ],
            "Resource": "*"
        },
        {
            "Sid": "STSAssumeRole",
            "Effect": "Allow",
            "Action": [
                "sts:AssumeRole",
                "sts:GetCallerIdentity"
            ],
            "Resource": [
                "arn:aws:iam::167819473688:role/service-role/*",
                "arn:aws:iam::167819473688:role/AmazonSageMaker-*",
                "arn:aws:iam::167819473688:role/*SageMaker*"
            ]
        },
        {
            "Sid": "SecretsManagerAccess",
            "Effect": "Allow",
            "Action": [
                "secretsmanager:GetSecretValue",
                "secretsmanager:DescribeSecret",
                "secretsmanager:ListSecrets",
                "secretsmanager:CreateSecret",
                "secretsmanager:UpdateSecret",
                "secretsmanager:PutSecretValue"
            ],
            "Resource": "arn:aws:secretsmanager:*:167819473688:secret:*"
        },
        {
            "Sid": "SystemsManagerAccess",
            "Effect": "Allow",
            "Action": [
                "ssm:GetParameter",
                "ssm:GetParameters",
                "ssm:GetParametersByPath",
                "ssm:PutParameter",
                "ssm:DescribeParameters",
                "ssm:ListTagsForResource"
            ],
            "Resource": [
                "arn:aws:ssm:*:167819473688:parameter/aws/sagemaker/*",
                "arn:aws:ssm:*:167819473688:parameter/AmazonSageMaker-*"
            ]
        },
        {
            "Sid": "CloudFormationAccess",
            "Effect": "Allow",
            "Action": [
                "cloudformation:DescribeStacks",
                "cloudformation:DescribeStackResources",
                "cloudformation:ListStacks",
                "cloudformation:GetTemplate"
            ],
            "Resource": "arn:aws:cloudformation:*:167819473688:stack/aws-sagemaker-*"
        },
        {
            "Sid": "EKSClusterAccess",
            "Effect": "Allow",
            "Action": [
                "eks:DescribeCluster",
                "eks:ListClusters",
                "eks:AccessKubernetesApi",
                "eks:DescribeNodegroup",
                "eks:ListNodegroups"
            ],
            "Resource": "arn:aws:eks:*:167819473688:cluster/*"
        }
    ]
}

